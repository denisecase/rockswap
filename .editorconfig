# ============================================================
# File: .editorconfig
# Purpose: Keep consistent basic formatting across all editors
# ------------------------------------------------------------
# This file tells editors how to handle indentation, line endings,
# and whitespace so everyone's files look the same.
# Works automatically in VS Code and many other editors.
# ============================================================

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
